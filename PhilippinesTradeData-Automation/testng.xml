<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Philippines Trade Data Test Suite" verbose="1">
    
    <test name="Responsiveness Tests">
        <classes>
            <class name="com.philippinestradedata.tests.ResponsivenessTest">
                <methods>
                    <include name="testMobileResponsiveness"/>
                    <include name="testTabletResponsiveness"/>
                    <include name="testDesktopResponsiveness"/>
                    <include name="testAllHyperlinks"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <test name="Performance Tests">
        <classes>
            <class name="com.philippinestradedata.tests.PerformanceTest">
                <methods>
                    <include name="testMobilePageLoadTime"/>
                    <include name="testDesktopPageLoadTime"/>
                    <include name="identifyPerformanceIssues"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- Add more test groups as needed -->
    
</suite>